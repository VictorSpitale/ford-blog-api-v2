{
  "name": "ford-blog-api-v2",
  "version": "0.0.1",
  "description": "",
  "author": "Victor Spitale",
  "private": true,
  "license": "CC-BY-NC-ND-4.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json --runInBand --verbose --detectOpenHandles",
    "test:e2e-watch": "jest --config ./jest-e2e.json --watch",
    "test:e2e-coverage": "jest --config ./jest-e2e.json --runInBand --verbose --detectOpenHandles --coverage",
    "openapi:export": "npx openapi-typescript schema.json > generated-schema.ts"
  },
  "dependencies": {
    "@google-cloud/storage": "6.1.0",
    "@nestjs-modules/mailer": "1.6.1",
    "@nestjs/bull": "0.5.5",
    "@nestjs/common": "8.4.7",
    "@nestjs/config": "2.1.0",
    "@nestjs/core": "8.4.7",
    "@nestjs/jwt": "8.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/mongoose": "9.1.1",
    "@nestjs/passport": "8.2.2",
    "@nestjs/platform-express": "8.4.7",
    "@nestjs/swagger": "5.2.1",
    "@types/bcrypt": "5.0.0",
    "bcrypt": "5.0.1",
    "bull": "4.8.4",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "cookie-parser": "1.4.6",
    "handlebars": "4.7.7",
    "lodash": "4.17.21",
    "mongoose": "6.3.8",
    "nodemailer": "6.7.5",
    "passport": "0.6.0",
    "passport-google-oauth20": "2.0.0",
    "passport-headerapikey": "1.2.2",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.5",
    "swagger-ui-express": "4.4.0"
  },
  "devDependencies": {
    "@nestjs/cli": "8.2.6",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/testing": "8.4.7",
    "@types/bull": "3.15.8",
    "@types/cookie-parser": "1.4.3",
    "@types/express": "4.17.13",
    "@types/jest": "27.5.2",
    "@types/lodash": "4.14.182",
    "@types/multer": "1.4.7",
    "@types/node": "17.0.42",
    "@types/passport-google-oauth20": "2.0.11",
    "@types/passport-jwt": "3.0.6",
    "@types/passport-local": "1.0.34",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.28.0",
    "@typescript-eslint/parser": "5.28.0",
    "eslint": "8.17.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "prettier": "2.7.1",
    "source-map-support": "0.5.21",
    "superagent-defaults": "0.1.14",
    "supertest": "6.2.3",
    "ts-jest": "27.1.5",
    "ts-loader": "9.3.0",
    "ts-node": "10.8.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
